<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="app-body">

    <!--Nav on left-->
    <%- include("./partials/navbar.ejs") %> 

    <!--App Content on right-->
    <section class="app-section">

        <header class="app-header">
            <!--App Header-->
            <h1>Habits</h1>
        </header>

        <main class="app-content">
            <!--App Content-->
            <!--Options-->
            <ul class="app-options">
                <li>
                    <button class="open-button" type="menu">Create New Habit</button>
                    <section class="overlay hidden">
                        <form action="/api/habit/create" method="POST">
                            <h5>Create new habit</h5>
                            <button type="button" class="close-form-button">x</button>
                            <section>
                                <label for="name">Name</label>
                                <input id="name"
                                name="name"
                                type="text"
                                maxlength="50"
                                placeholder="Enter name here"
                                required>
                            </section>
                            <section>
                                <label for="description">Description</label>
                                <textarea id="description"
                                name="description"
                                maxlength = "250"
                                placeholder = "Enter description here"
                                spellcheck = "true"
                                ></textarea>
                            </section>
                            <section>
                                <label for="startDate">Starting Date</label>
                                <input id="startDate"
                                name="startDate"
                                type="date"
                                >
                            </section>
                            <section>
                                <label for="endDate">Ending Date</label>
                                <input id="endDate"
                                name="endDate"
                                type="date"
                                >
                            </section>
                            <section>
                                <label for="step">Every:</label>
                                <input id="step"
                                name="step"
                                type="number"
                                min="1"
                                max="100"
                                required>
                                <select name="timeUnit" required>
                                    <option value="">Choose time unit</option>
                                    <option value="day">Day</option>
                                    <option value="week">Week</option>
                                    <option value="month">Month</option>
                                    <option value="year">Year</option>
                                </select>
                            </section>
                            <section>
                                <label for="startTime">Start Time</label>
                                <input id="startTime"
                                name="startTime"
                                type="time">
                            </section>
                            <section>
                                <label for="endTime">End Time</label>
                                <input id="endTime"
                                name="endTime"
                                type="time">
                            </section>
                            <section>
                                <button type="submit">Create Habit</button>
                            </section>
                        </form>
                    </section>
                </li>
            </ul>

            <!--Alerts-->
            <%- include("./partials/alerts.ejs") %>
            
            <!--Display-->
            <section class="card-display">
                <% if(habits.length) { %>
                <% for(let i = 0; i < habits.length; ++i) { %>
                    <section class="card" data-id="<%=habits[i]._id%>">
                        <section class="card-info">
                            <h5><%=habits[i].name%></h5>
                            <%if(habits[i].description != undefined){%><p><%=habits[i].description%></p><%}%>
                            <section>
                                <span><%= habits[i].startDate.toDateString() %></span>
                                <span>&ndash;</span>
                                <span><%= habits[i].endDate.toDateString() %></span>
                            </section>
                            <section>
                                <% if(habits[i].startTime){%><span><%=habits[i].startTime.toLocaleTimeString()%></span><span> &ndash; </span><%}%><% if(habits[i].endTime) {%><span><%=habits[i].endTime.toLocaleTimeString()%></span><%}%>
                            </section>
                        </section>
                        
                        <ul class="card-options">
                            <li>
                                <button class="open-button" type="button">Update Habit</button>
                                <section class="overlay hidden">
                                    <form 
                                    action="/api/habit/update/<%=habits[i]._id%>?_method=PUT" 
                                    method="POST">  
                                        <button type="button" class="close-form-button">x</button>
                                        <h5>Update this habit</h5>
                                        <section>
                                            <label for="name">Name</label>
                                            <input id="name"
                                            name="name"
                                            type="text"
                                            maxlength="50"
                                            placeholder="Enter name here"
                                            value="<%=habits[i].name%>">
                                        </section>
                                        <section>
                                            <label for="description">Description</label>
                                            <textarea id="description"
                                            name="description"
                                            maxlength = "250"
                                            placeholder = "Enter description here"
                                            spellcheck = "true"
                                            ><%=habits[i].description%></textarea>
                                        </section>
                                        <section>
                                            <label for="startDate">Starting Date</label>
                                            <input id="startDate"
                                            name="startDate"
                                            type="date">
                                        </section>
                                        <section>
                                            <label for="endDate">Ending Date</label>
                                            <input id="endDate"
                                            name="endDate"
                                            type="date">
                                        </section>
                                        <section>
                                            <label for="step">Every:</label>
                                            <input id="step"
                                            name="step"
                                            type="number"
                                            min="1"
                                            max="100"
                                            >
                                            <select name="timeUnit">
                                                <option value="">Choose time unit</option>
                                                <option value="day">Day</option>
                                                <option value="week">Week</option>
                                                <option value="month">Month</option>
                                                <option value="year">Year</option>
                                            </select>
                                        </section>
                                        <section>
                                            <label for="startTime">Start Time</label>
                                            <input id="startTime"
                                            name="startTime"
                                            type="time">
                                        </section>
                                        <section>
                                            <label for="endTime">End Time</label>
                                            <input id="endTime"
                                            name="endTime"
                                            type="time">
                                        </section>
                                        <section>
                                            <button type="submit">Update Habit</button>
                                        </section>     
                                    </form>
                                </section>
                            </li>
                            <li>
                                <button class="open-button" type="button">Delete Habit</button>
                                <section class="overlay hidden">
                                    <form class="button-form" 
                                    action="/api/habit/delete/<%=habits[i]._id%>?_method=DELETE" 
                                    method="POST">
                                        <button type="button" class="close-form-button">x</button>
                                        <h5>Are you sure you want to delete this habit?</h5>
                                        <button type="submit">Delete Habit</button>
                                    </form>
                                </section>
                            </li>
                        </ul>

                    </section>
                <% } %>
            <% }else{%>
                <h5>No habits</h5>
            <% } %>
            </section>

            <!--No card? Display this instead-->
        </main>

    </section>
    
<script src="/js/main.js"></script>
</body>
</html>