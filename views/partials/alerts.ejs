<section id="alerts">
    <% if(locals.messages.errors) { %>
        <ul>
        <% for(let i = 0; i < locals.messages.errors.length; ++i) { %>
            <li>
                <span><%=locals.messages.errors[i].msg%></span>
                <button class="close-button" type="button">x</button>
            </li>
        <% } %>
        </ul>
    <% } %>
    <% if(locals.messages.success) { %>
        <ul>
            <li>
                <span><%=locals.messages.success%></span>
                <button class="close-button" type="button">x</button>
            </li>
        </ul>
    <% } %>
</section>