<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="app-body">
    
    <%- include("./partials/navbar") %>

    <section class="app-section">

        <header class="app-header">
            <h1>Routines</h1>
        </header>

        <main class="app-content">
            <!--Options-->
            <ul class="app-options">
                <li>
                    <button class="open-button" type="menu">Create New Routine</button>
                    <section class="overlay hidden">
                        <form action="/api/routine/create" method="POST">
                            <h5>Create New Routine</h5>
                            <button type="button" class="close-form-button">x</button>
                            <section class="input-section">
                                <label for="routineName">Routine Name</label>
                                <input id="routineName"
                                name="routineName"
                                type="text"
                                maxlength="50"
                                placeholder="Enter routine name here"
                                required>
                            </section>
                            <section class="input-section">
                                <label for="routineDescription">Routine Description</label>
                                <textarea id="routineDescription"
                                name="routineDescription"
                                maxlength = "250"
                                placeholder = "Enter routine description here"
                                spellcheck = "true"
                                ></textarea>
                            </section>
                            <section class="input-section">
                                <label for="startDate">Starting Date</label>
                                <input id="startDate"
                                name="startDate"
                                type="date"
                                required>
                            </section>
                            <section id="new-task-form-container">
                                <section class="task-form">
                                    <h5>Add new task</h5>
                                    <section class="input-section">
                                        <label for="name">Name</label>
                                        <input id=""
                                        name="name"
                                        type="text"
                                        maxlength="50"
                                        placeholder="Enter name here"
                                        required>
                                    </section>
                                    <section class="input-section">
                                        <label for="description">Description</label>
                                        <textarea id="description"
                                        name="description"
                                        maxlength = "250"
                                        placeholder = "Enter description here"
                                        spellcheck = "true"></textarea>
                                    </section>
                                    <section class="input-section">
                                        <label for="startTime">Start Time</label>
                                        <input id="startTime"
                                        name="startTime"
                                        type="time"
                                        required>
                                    </section>
                                    <section class="input-section">
                                        <label for="endTime">End Time</label>
                                        <input id="endTime"
                                        name="endTime"
                                        type="time"
                                        required>
                                    </section>
                                </section>
                            </section>
                            <button id="add-new-task-button" type="button">Add A Task</button>
                            <section>
                                <button type="submit">Create Routine</button>
                            </section>
                        </form>
                    </section>
                </li>
            </ul>

            <%- include("./partials/alerts.ejs") %>

            <!--App Functionality-->
            <section class="app-display">
                <% if(routines.length) { %>
                    <section class="card-display">
                        <% for(let i = 0; i < routines.length; ++i) { %>
                            <section class="card">
                                <section class="card-info">
                                    <h5><%=routines[i].name%></h5>
                                    <% if(routines[i].description?.length) { %> <p><%=routines[i].description%> <% } %>
                                    <% if(routines[i].tasks.length) { %>
                                        <ul>
                                            <% routines[i].tasks.forEach(x => { %>
                                                <li>    
                                                    <h5><%=x.task.name%></h5>
                                                    <% if(x.task.description) { %> <p><%=x.task.description%></p> <% } %>
                                                    <p><span><%=x.task.startTime.toLocaleTimeString()%></span> <span>&ndash;</span> <span><%=x.task.endTime.toLocaleTimeString()%></span></p>
                                                    <ul>
                                                        <li>
                                                            <button class="open-button" type="button">Update Task</button>
                                                            <section class="overlay hidden">
                                                                <form action="/api/routine/updateTask/<%=routines[i]._id%>/<%=x._id%>?_method=PUT" method="POST">
                                                                    <h5>Update Task</h5>
                                                                    <section class="input-section">
                                                                        <label for="name">Name</label>
                                                                        <input id=""
                                                                        name="name"
                                                                        type="text"
                                                                        maxlength="50"
                                                                        placeholder="Enter name here"
                                                                        value="<%=x.task.name%>">
                                                                    </section>
                                                                    <section class="input-section">
                                                                        <label for="description">Description</label>
                                                                        <textarea id="description"
                                                                        name="description"
                                                                        maxlength = "250"
                                                                        placeholder = "Enter description here"
                                                                        spellcheck = "true"><%=x.task.description%></textarea>
                                                                    </section>
                                                                    <section class="input-section">
                                                                        <label for="startTime">Start Time</label>
                                                                        <input id="startTime"
                                                                        name="startTime"
                                                                        type="time"
                                                                        value="<%=x.task.startTime%>">
                                                                    </section>
                                                                    <section class="input-section">
                                                                        <label for="endTime">End Time</label>
                                                                        <input id="endTime"
                                                                        name="endTime"
                                                                        type="time"
                                                                        value="<%=x.task.endTime%>">
                                                                    </section>
                                                                    <section>
                                                                        <button type="submit">Update Task</button>
                                                                    </section>
                                                                </form>
                                                            </section>
                                                        </li>
                                                        <li>
                                                            <button class="open-button" type="button">Delete Task</button>
                                                            <section class="overlay hidden">
                                                                <form action="/api/routine/deleteTask/<%=routines[i]._id%>/<%=x._id%>?_method=PUT" method="POST">
                                                                    <h5>Are you sure you want to delete this task from your routine? (WARNING: This cannot be undone!)</h5>
                                                                    <button type="submit">Delete Task</button>
                                                                </form>
                                                            </section>
                                                        </li>
                                                    </ul>
                                                </li>
                                            <% }) %>
                                        </ul>
                                    <% }else{ %>
                                        <p>No tasks to display</p>
                                    <% } %>
                                </section>
                                <ul class="card-options">
                                    <li>
                                        <button type="button" class="open-button">Add New Task</button>
                                        <section class="overlay hidden">
                                            <form action="/api/routine/addTask/<%=routines[i]._id%>?_method=PUT" method="POST">
                                                <h5>Add new task</h5>
                                                <section class="input-section">
                                                    <label for="name">Name</label>
                                                    <input id=""
                                                    name="name"
                                                    type="text"
                                                    maxlength="50"
                                                    placeholder="Enter name here"
                                                    required>
                                                </section>
                                                <section class="input-section">
                                                    <label for="description">Description</label>
                                                    <textarea id="description"
                                                    name="description"
                                                    maxlength = "250"
                                                    placeholder = "Enter description here"
                                                    spellcheck = "true"></textarea>
                                                </section>
                                                <section class="input-section">
                                                    <label for="startTime">Start Time</label>
                                                    <input id="startTime"
                                                    name="startTime"
                                                    type="time"
                                                    required>
                                                </section>
                                                <section class="input-section">
                                                    <label for="endTime">End Time</label>
                                                    <input id="endTime"
                                                    name="endTime"
                                                    type="time"
                                                    required>
                                                </section>
                                                <input class="hidden" name="startDate" type="date" value="<%=(new Date()).toISOString().slice(0,10)%>">
                                                <% console.log((new Date()).toISOString()) %>
                                                <section>
                                                    <button type="submit">Add new task</button>
                                                </section>
                                            </form>
                                        </section>
                                    </li>
                                    <li>
                                        <button type="button" class="open-button">Update Routine</button>
                                        <section class="overlay hidden">
                                            <form action="/api/routine/update/<%=routines[i]._id%>?_method=PUT" method="POST">
                                                <section class="input-section">
                                                    <label for="routineName">Routine Name</label>
                                                    <input id="routineName"
                                                    name="name"
                                                    type="text"
                                                    maxlength="50"
                                                    placeholder="Enter routine name here"
                                                    value="<%=routines[i].name%>">
                                                </section>
                                                <section class="input-section">
                                                    <label for="routineDescription">Routine Description</label>
                                                    <textarea id="routineDescription"
                                                    name="description"
                                                    maxlength = "250"
                                                    placeholder = "Enter routine description here"
                                                    spellcheck = "true"
                                                    ><%=routines[i].description%></textarea>
                                                </section>
                                                <section>
                                                    <button type="submit">Update Routine</button>
                                                </section>
                                            </form>
                                        </section>
                                    </li>
                                    <li>
                                        <button type="button" class="open-button">Delete Routine</button>
                                        <section class="overlay hidden">
                                            <form action="/api/routine/delete/<%=routines[i]._id%>?_method=DELETE" method="POST">
                                                <h5>Are you sure you want to delete this routine and all of its associated tasks? (WARNING: This cannot be undone!)</h5>
                                                <button type="submit">Delete Routine</button>
                                            </form>
                                        </section>
                                    </li>
                                </ul>
                            </section>
                        <% } %>
                    </section>
                <%}else{ %>
                    <p>No routines to display.</p>
                <% } %>
            </section>
            

        </main>

    </section>
<script src="/js/main.js"></script>
</body>
</html>